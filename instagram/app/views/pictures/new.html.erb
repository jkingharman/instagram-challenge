
<div class="row">

<div class="col-md-12 text-center">
   <h1> Post a pic </h1>
</div>

<div class="row">
   <div class="col-md-3"></div>
   <div class="col-md-6">

      <div class='form-wrapper text-center'>
         <%= form_for @picture, html: { class: 'form-horizontal', multipart: true } do |form| %>

         <div class='form-group'>
            <%= form.file_field :image %>
         </div>

         <div class='form-group text-center '>
            <%= form.label :caption %>
            <%= form.text_field :caption, class: 'textbox' %>
         </div>

         <div class='form-group text-center '>
            <%= form.submit "Post", class: 'btn btn-link' %>
            <% end %>
         </div>

      </div>
      <% if flash[:notice] %>
        <% @picture.errors.full_messages.each do |msg| %>
          <p> <%= msg %> </p>
        <% end %>
      <% end %>
      <div class="col-md-3"></div>
   </div>
</div>
