

<div class="row">
    <div class="col-md-12 text-center">
      <%= image_tag @picture.image.url(:medium) %>
      <p> Caption: <%= @picture.caption %> </p>
      <p> Created at: <%= @picture.created_at %> </p>
    </div>

    <% if user_signed_in? %>
      <%= link_to "Leave a comment", new_picture_comment_url(@picture) %>
    <% end %>
</div>
