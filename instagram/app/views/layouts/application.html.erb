<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </head>

  <body>

    <nav class="navbar navbar-default">

    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Instergram', root_path, class: 'navbar-brand' %>
      </div>

       <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

         <ul class="nav navbar-nav">
            <li class="active"><%= link_to 'Home', root_path %></li>
            <li class="dropdown">
             </li>
           </ul>

     <ul class="nav navbar-nav navbar-right">
       <% if !user_signed_in? %>
       <li> <%= link_to "Sign Up", new_user_registration_url %> </li>
        <li> <%= link_to "Sign In", user_session_url %> </li>

        <% else %>
          <li><%= link_to 'Your page', current_user %></li>
        <li> Current user: <%= current_user.email %> </li>
        <li role="separator" class="divider"> </li>
        <%= link_to "Sign Out", destroy_user_session_url, :method => :delete %>
      </li>
      <% end %>
      </ul>
    </div>
     </div>
      </nav>


        <p class="notice"><%= notice %></p>
           <p class="alert"> <%= alert %></p>

           <div class="container">
             <%= yield %>
          </div>
  </body>
</html>
