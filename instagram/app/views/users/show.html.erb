
<% if !flash[:success].nil? %>
<%= flash[:success] %>
<% end %>

<% if !@user.pictures.empty? %>
<% @user.pictures.reverse.each do |picture| %>
  <%= image_tag picture.image.url(:thumb) %>
  <%= picture.caption %>
  <%= picture.created_at %>
  <%= link_to "Delete Picture", picture_url(picture), method: :delete %>
  <%= link_to "View Picture #{picture.id}", picture_url(picture) %>
  <%= link_to "Edit Picture #{picture.id}", edit_picture_url(picture) %>
  <% if !picture.comments.empty? %>
    <% picture.comments.reverse.each do |comment| %>
      <%= comment.content %>
      <% end %>
 <% end %>
<% end %>
<%end%>


